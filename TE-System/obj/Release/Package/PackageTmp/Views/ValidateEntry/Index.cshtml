            //$.notify('<strong>The Entry Has Been Flagged!</strong>', { type: 'success' });
        });       
        
    </script>
    <!-- // Bootstrap-Sidebar Script -->
    <script src="~/bootstrap-sidebar/sidebar.js"></script>
}