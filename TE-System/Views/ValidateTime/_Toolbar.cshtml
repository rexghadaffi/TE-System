<div id="billabilityUpdateToolbar" style="margin-bottom:5px">
    <div class="form-inline">
        <div class="form-group">
            <div class="btn-group">
                <a href="/ValidateTime/PreviousWeek" class="btn btn-sm btn-default"
                   data-toggle="tooltip"
                   data-placement="top"
                   title="previous week">
                    <span class="fa fa-chevron-left"></span>
                </a>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <input type="text"
                       placeholder="Week # @ViewBag.CurrentWeek"
                       id="txtSearchWeek"
                       data-toggle="tooltip"
                       data-placement="bottom"
                       title="jump to week"
                       class="form-control input-sm" />
            </div>
            <div class="btn-group">
                <button id="btnSearchWeekValidateBillability" type="submit" class="btn btn-sm btn-default"
                        style="margin-left:-5px"
                        data-toggle="tooltip"
                        data-placement="top"
                        title="search week">
                    <span class="fa fa-search"></span>
                </button>
            </div>
        </div>
        <div class="form-group">
            <a href="/ValidateTime/NextWeek"
               type="button" class="btn btn-sm btn-default"
               data-toggle="tooltip"
               data-placement="top"
               title="next week">
                <span class="fa fa-chevron-right"></span>
            </a>
        </div>
    </div>
</div>

